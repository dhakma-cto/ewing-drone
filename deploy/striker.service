[Unit]
Description=STRIKER EDGE AI
After=graphical.target
Wants=graphical.target

[Service]
Type=simple
User=tritium
Environment=DISPLAY=:0
Environment=WAYLAND_DISPLAY=wayland-1
Environment=XDG_RUNTIME_DIR=/run/user/1000
Environment=XAUTHORITY=/home/tritium/.Xauthority
WorkingDirectory=/home/tritium/TerminalAI_Pi
ExecStart=/usr/bin/python3 striker/main.py
Restart=on-failure
RestartSec=3
StandardOutput=append:/home/tritium/striker.log
StandardError=append:/home/tritium/striker.log

[Install]
WantedBy=graphical.target
